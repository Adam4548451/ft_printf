START
    int i
    int x
    char *pt;
    char *output
    char *str_arg
    va_list args;

    x = 0
    pt = string;
    output = NULL;
    va_start(args, string);
    i = count_character(string, '%')
    WHILE (x < i)
        output = dupCatResize(output, pt, ft_strchr(pt, (int)'%')
        pt = Find '%' in string
        pt++;
        IF (isExigence1(*pt))
            IF (*pt == '%')
                // IF a '%' is encounter
                x++
                BREAK;
            ELSE IF (ft_isspace((int)pt[1]) || !pt[1])
                //The only way we got to determine the type of va_arg is by looking at The conversion operator (we can't handle a wrong input in this case), so:
                Based on (*pt) define TYPE_OF_VAARG
                str_arg = va_arg(args, TYPE_OF_VAARG)
                Convert str_arg to string
                Concatenate the returned string to output (for this use join and free)
            ELSE
                ERROR - BREAK
            ENDIF
        ELSEIF (isExigence2(*pt))
        ELSE 
            BREAK
        ENDIF
        x++;
    ENDWHILE
    va_end(args)
    print the output with pustr
END

